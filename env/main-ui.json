{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Create a custom ui template",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "description": "custom",
                    "elements": [
                        {
                            "name": "intro",
                            "type": "Microsoft.Common.TextBlock",
                            "visible": true,
                            "options": {
                                "style": "None",
                                "text": "some text",
                                "link": {
                                    "label": "some text",
                                    "uri": "https://www.bing.com"
                                }
                            }
                        },
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "location": {
                                "resourceTypes": [
                                    "microsoft.resources/resourcegroups"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "app",
                    "label": "Application",
                    "description": "Configure the environment that will be used for deploying this application to Azure. The App Service is configured to use run-from-package deployments. More details are available at https://learn.microsoft.com/en-us/azure/app-service/deploy-run-package.",
                    "elements": [
                        {
                            "name": "webAppName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Web App Name",
                            "defaultValue": "[[uniqueString(resourceGroup().id)]",
                            "toolTip": "The name of your web application.",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {
                            "name": "locations",
                            "type": "Microsoft.Solutions.ArmApiControl",
                            "request": {
                                "method": "GET",
                                "path":"[concat(steps('basics').resourceScope.subscription.id,'/resourceGroups/',steps('basics').resourceScope.resourceGroup.id,'/providers/Microsoft.MachineLearningServices/workspaces?api-version=2024-07-01-preview')]"
                           }
                        },
                        {
                            "name": "location",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Deployment workspace",
                            "defaultValue": "",
                            "toolTip": "workspace for the resources. Defaults to matching the resource group.",
                            "filter": true,
                            "constraints": {
                                "allowedValues":"[map(steps('app').locations.value, (item) => parse(concat('{\"label\":\"', item.name, '\",\"value\":\"', item.name, '\"}')))]",
                                "required": true
                            },
                            "visible": true
                        }
                    ]
                },
                {
                    "name": "tags",
                    "label": "Tags",
                    "elements": [
                        {
                            "name": "tagsControl",
                            "type": "Microsoft.Common.TagsByResource",
                            "resources": [
                                "Microsoft.Web/serverfarms",
                                "Microsoft.Web/sites"
                            ]
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "webAppName": "[steps('app').webAppName]",
                "location": "[steps('app').location]"
            },
            "kind": "ResourceGroup",
            "location": "[steps('basics').resourceScope.location.name]",
            "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]"
        }
    }
}
